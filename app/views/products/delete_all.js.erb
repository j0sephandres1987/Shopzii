//remove alert if exits
$(".success").find(".alert-box").remove();
//render success alerts
if("<%= j (@success) %>" == "true") {
    $('.data-content').fadeOut();
    $(".success").prepend("<%= j (render "shared/success", :message => @message) %>");
    $(document).foundation();
} else {
    $(".success").prepend("<%= j (render "shared/unsuccessfully", :message => @message) %>");
    $(document).foundation();
}