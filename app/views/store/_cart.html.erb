<tr id="tr-<%= cart.id %>">
    <td class="photo-column "><%= link_to((image_tag Product.find(cart.product_id).photos.first.photo.url(:thumb)), {:action => "properties", :id => cart.id } ) %></td>
    <td class="product-column"><%= Product.find(cart.product_id).name %></td>
    <td class="product-column"><%= number_to_currency(Product.find(cart.product_id).price * cart.quantity) + " COP" %></td>
    <td><%= cart.quantity %></td>
    <td><%= link_to(content_tag(:i, "", :class => "fa fa-minus-square icon-link-action")+" Eliminar", {:action => "delete", :id => cart.id },{:class => "link-action", :data => {:confirm => ""}, :remote => true}) %></td>
</tr>

